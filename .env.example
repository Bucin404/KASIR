# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For SQLite (default):
# DATABASE_URL=sqlite:///kasir.db

# For MySQL (recommended):
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/kasir_db

# MySQL Connection Details (alternative format)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=kasir_db

# Midtrans Payment Gateway Configuration (Sandbox)
# Get your keys from: https://dashboard.sandbox.midtrans.com/settings/config_info
MIDTRANS_SERVER_KEY=SB-Mid-server-YOUR_SERVER_KEY
MIDTRANS_CLIENT_KEY=SB-Mid-client-YOUR_CLIENT_KEY
MIDTRANS_IS_PRODUCTION=False

# Application Settings
APP_NAME=KASIR Modern
APP_VERSION=2.0.0
