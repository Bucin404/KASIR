{% block extra_js %}
<script>
    // Sample products data
    const products = {{ products|tojson|safe }};
    
    let cart = [];
    let productQuantities = {}; // Track quantity for each product
    let currentCategory = 'all';
    let searchQuery = '';
    
    // Initialize product quantities to 1
    products.forEach(product => {
        productQuantities[product.id] = 1;
    });
    
    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
        loadProducts();
        loadCart(); // Load saved cart
        setupEventListeners();
    });
    
    // Setup event listeners
    function setupEventListeners() {
        // Search
        document.getElementById('searchInput').addEventListener('input', function(e) {
            searchQuery = e.target.value;
            loadProducts(currentCategory, searchQuery);
        });
        
        // Category tabs
        document.querySelectorAll('.category-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.category-tab').forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                currentCategory = this.dataset.category;
                loadProducts(currentCategory, searchQuery);
            });
        });
        
        // Payment amount input
        document.getElementById('paidAmount').addEventListener('input', calculateChange);
    }
    
    // Load products
    function loadProducts(category = 'all', search = '') {
        const grid = document.getElementById('productsGrid');
        let filtered = category === 'all' ? products : products.filter(p => p.category === category);
        
        // Apply search filter
        if (search) {
            const searchLower = search.toLowerCase();
            filtered = filtered.filter(p => 
                p.name.toLowerCase().includes(searchLower) || 
                p.id.toString().includes(search)
            );
        }
        
        if (filtered.length === 0) {
            grid.innerHTML = `
                <div style="grid-column: 1/-1; text-align: center; padding: 60px 20px;">
                    <i class="fas fa-search fa-4x" style="color: rgba(255,255,255,0.2); margin-bottom: 20px;"></i>
                    <p style="color: rgba(255,255,255,0.5); font-size: 1.1rem;">Tidak ada menu yang ditemukan</p>
                </div>
            `;
            return;
        }
        
        grid.innerHTML = filtered.map(product => `
            <div class="product-card">
                ${product.image ? `
                    <div class="product-image-container">
                        <img src="${product.image}" alt="${product.name}" class="product-img">
                    </div>
                ` : `
                    <div class="product-image">
                        <i class="fas fa-utensils"></i>
                    </div>
                `}
                <div class="product-info">
                    <div class="product-code">#${product.id}</div>
                    <div class="product-name">${product.name}</div>
                    <div class="product-price">Rp ${product.price.toLocaleString('id-ID')}</div>
                    ${product.spicy_level ? `
                        <div class="spicy-indicator spicy-${product.spicy_level}">
                            ${getSpicyIcon(product.spicy_level)}
                            <span>${getSpicyLabel(product.spicy_level)}</span>
                        </div>
                    ` : ''}
                </div>
                <div class="product-qty-controls">
                    <button class="product-qty-btn" onclick="adjustProductQty(${product.id}, -1)">
                        <i class="fas fa-minus"></i>
                    </button>
                    <input type="number" 
                           class="product-qty-input" 
                           id="qty-${product.id}" 
                           value="${productQuantities[product.id]}" 
                           min="1" 
                           max="99"
                           onchange="updateProductQty(${product.id}, this.value)">
                    <button class="product-qty-btn" onclick="adjustProductQty(${product.id}, 1)">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                <button class="product-add-btn" onclick="addToCartWithQty(${product.id})">
                    <i class="fas fa-cart-plus me-2"></i>Tambah ke Keranjang
                </button>
            </div>
        `).join('');
    }
    
    // Get spicy icon
    function getSpicyIcon(level) {
        if (level === 'pedas') return '<i class="fas fa-pepper-hot"></i><i class="fas fa-pepper-hot"></i><i class="fas fa-pepper-hot"></i>';
        if (level === 'sedang') return '<i class="fas fa-pepper-hot"></i><i class="fas fa-pepper-hot"></i>';
        return '<i class="fas fa-pepper-hot"></i>';
    }
    
    // Get spicy label
    function getSpicyLabel(level) {
        if (level === 'pedas') return 'Pedas';
        if (level === 'sedang') return 'Sedang';
        return 'Normal';
    }
    
    // Adjust product quantity (+ or -)
    function adjustProductQty(productId, change) {
        productQuantities[productId] = Math.max(1, Math.min(99, productQuantities[productId] + change));
        const input = document.getElementById(`qty-${productId}`);
        if (input) {
            input.value = productQuantities[productId];
        }
    }
    
    // Update product quantity from input
    function updateProductQty(productId, value) {
        const qty = parseInt(value) || 1;
        productQuantities[productId] = Math.max(1, Math.min(99, qty));
        const input = document.getElementById(`qty-${productId}`);
        if (input) {
            input.value = productQuantities[productId];
        }
    }
    
    // Add to cart with selected quantity
    function addToCartWithQty(productId) {
        const product = products.find(p => p.id === productId);
        const qty = productQuantities[productId];
        const existingItem = cart.find(item => item.id === productId);
        
        if (existingItem) {
            existingItem.qty += qty;
        } else {
            cart.push({ ...product, qty: qty });
        }
        
        // Reset quantity to 1 after adding
        productQuantities[productId] = 1;
        const input = document.getElementById(`qty-${productId}`);
        if (input) {
            input.value = 1;
        }
        
        updateCart();
        
        // Show success notification
        showNotification(`${product.name} ditambahkan (${qty}x)`);
    }
    
    // Show notification
    function showNotification(message) {
        // Create notification element
        const notification = document.createElement('div');
        notification.style.cssText = `
            position: fixed;
            top: 80px;
            right: 20px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 15px 25px;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            z-index: 10000;
            font-weight: 600;
            animation: slideInRight 0.4s ease;
        `;
        notification.innerHTML = `<i class="fas fa-check-circle me-2"></i>${message}`;
        document.body.appendChild(notification);
        
        // Remove after 3 seconds
        setTimeout(() => {
            notification.style.animation = 'slideOutRight 0.4s ease';
            setTimeout(() => notification.remove(), 400);
        }, 3000);
    }
    
    // Add to cart (legacy - keep for compatibility)
    function addToCart(productId) {
        const product = products.find(p => p.id === productId);
        const existingItem = cart.find(item => item.id === productId);
        
        if (existingItem) {
            existingItem.qty++;
        } else {
            cart.push({ ...product, qty: 1 });
        }
        
        updateCart();
    }
    
    // Update cart display
    function updateCart() {
        const cartItems = document.getElementById('cartItems');
        
        if (cart.length === 0) {
            cartItems.innerHTML = `
                <div class="cart-empty">
                    <i class="fas fa-shopping-cart"></i>
                    <p>Keranjang masih kosong</p>
                    <small>Pilih produk untuk memulai transaksi</small>
                </div>
            `;
        } else {
            cartItems.innerHTML = cart.map(item => `
                <div class="cart-item">
                    <div class="item-info">
                        <div>
                            <div class="item-name">${item.name}</div>
                            <div style="color: rgba(255,255,255,0.5); font-size: 0.85rem; margin-top: 4px;">
                                #${item.id}
                            </div>
                        </div>
                        <div class="item-price">Rp ${item.price.toLocaleString('id-ID')}</div>
                    </div>
                    <div class="item-controls">
                        <button class="qty-btn" onclick="decreaseQty(${item.id})">
                            <i class="fas fa-minus"></i>
                        </button>
                        <div class="qty-display">${item.qty}</div>
                        <button class="qty-btn" onclick="increaseQty(${item.id})">
                            <i class="fas fa-plus"></i>
                        </button>
                        <button class="btn-remove" onclick="removeItem(${item.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `).join('');
        }
        
        updateSummary();
        calculateChange();
        
        // Save cart to localStorage
        localStorage.setItem('kasir_cart', JSON.stringify(cart));
    }
    
    // Load cart from localStorage
    function loadCart() {
        const savedCart = localStorage.getItem('kasir_cart');
        if (savedCart) {
            try {
                cart = JSON.parse(savedCart);
                updateCart();
            } catch (e) {
                console.error('Error loading cart:', e);
                cart = [];
            }
        }
    }
    
    // Increase quantity
    function increaseQty(productId) {
        const item = cart.find(i => i.id === productId);
        if (item) {
            item.qty++;
            updateCart();
        }
    }
    
    // Decrease quantity
    function decreaseQty(productId) {
        const item = cart.find(i => i.id === productId);
        if (item) {
            if (item.qty > 1) {
                item.qty--;
            } else {
                removeItem(productId);
                return;
            }
            updateCart();
        }
    }
    
    // Remove item
    function removeItem(productId) {
        cart = cart.filter(i => i.id !== productId);
        updateCart();
    }
    
    // Update summary
    function updateSummary() {
        const subtotal = cart.reduce((sum, item) => sum + (item.price * item.qty), 0);
        const tax = subtotal * 0.1;
        const total = subtotal + tax;
        
        document.getElementById('subtotal').textContent = `Rp ${subtotal.toLocaleString('id-ID')}`;
        document.getElementById('tax').textContent = `Rp ${tax.toLocaleString('id-ID')}`;
        document.getElementById('total').textContent = `Rp ${total.toLocaleString('id-ID')}`;
    }
    
    // Calculate change
    function calculateChange() {
        const paidInput = document.getElementById('paidAmount');
        const paidAmount = parseFloat(paidInput.value) || 0;
        
        if (cart.length === 0) {
            document.getElementById('changeDisplay').style.display = 'none';
            return;
        }
        
        const total = cart.reduce((sum, item) => sum + (item.price * item.qty), 0) * 1.1;
        
        if (paidAmount >= total && paidAmount > 0) {
            const change = paidAmount - total;
            document.getElementById('changeDisplay').style.display = 'block';
            document.getElementById('changeAmount').textContent = `Rp ${change.toLocaleString('id-ID')}`;
        } else {
            document.getElementById('changeDisplay').style.display = 'none';
        }
    }
    
    // Clear cart
    function clearCart() {
        if (cart.length === 0) return;
        
        if (confirm('Kosongkan keranjang?')) {
            cart = [];
            document.getElementById('paidAmount').value = '';
            localStorage.removeItem('kasir_cart'); // Clear saved cart
            updateCart();
        }
    }
    
    // Checkout
    function checkout() {
        if (cart.length === 0) {
            alert('Keranjang masih kosong!');
            return;
        }
        
        const paidAmount = parseFloat(document.getElementById('paidAmount').value) || 0;
        const total = cart.reduce((sum, item) => sum + (item.price * item.qty), 0) * 1.1;
        
        if (paidAmount < total) {
            alert('Jumlah bayar kurang dari total!');
            return;
        }
        
        // Process payment (you can add AJAX call here)
        const change = paidAmount - total;
        alert(`Pembayaran berhasil!\nTotal: Rp ${total.toLocaleString('id-ID')}\nBayar: Rp ${paidAmount.toLocaleString('id-ID')}\nKembalian: Rp ${change.toLocaleString('id-ID')}`);
        
        // Clear cart
        cart = [];
        document.getElementById('paidAmount').value = '';
        localStorage.removeItem('kasir_cart'); // Clear saved cart
        updateCart();
    }
</script>
{% endblock %}
