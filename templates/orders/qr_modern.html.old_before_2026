    <script>
        function updateQR() {
            const table = document.getElementById('tableInput').value.trim() || '1';
            const baseUrl = window.location.origin;
            const qrUrl = `${baseUrl}/order/menu?table=${encodeURIComponent(table)}`;
            const qrApiUrl = `https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=${encodeURIComponent(qrUrl)}&bgcolor=ffffff&color=1e40af&margin=20&format=svg`;
            
            document.getElementById('qrCodeImage').src = qrApiUrl;
            document.getElementById('tableDisplay').textContent = table;
        }
        
        // Update on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateQR();
        });
    </script>
