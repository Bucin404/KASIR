    <div class="qr-container">
        <div class="qr-card">
            <div class="qr-header">
                <div class="qr-icon">
                    <i class="fas fa-qrcode"></i>
                </div>
                <h1 class="qr-title">Generate QR Code</h1>
                <p class="qr-subtitle">QR Code untuk Pemesanan Online</p>
            </div>
            
            <div class="table-selector">
                <div class="table-input-group">
                    <label for="tableInput">
                        <i class="fas fa-chair me-2"></i>Nomor Meja
                    </label>
                    <input 
                        type="text" 
                        id="tableInput" 
                        class="table-input" 
                        placeholder="Masukkan nomor meja (contoh: A1, B5, 12)"
                        value="{{ table_number }}"
                        oninput="updateQR()"
                    >
                </div>
                <button class="generate-btn" onclick="updateQR()">
                    <i class="fas fa-sync-alt me-2"></i>Generate QR Code
                </button>
            </div>
            
            <div class="qr-display" id="qrDisplay">
                <img 
                    id="qrCodeImage" 
                    class="qr-code-img" 
                    src="https://api.qrserver.com/v1/create-qr-code/?size=300x300&data={{ qr_url }}&bgcolor=ffffff&color=1e40af&margin=20&format=svg" 
                    alt="QR Code"
                >
                <div class="qr-table-info">
                    <p>Meja: <strong id="tableDisplay">{{ table_number }}</strong></p>
                </div>
            </div>
            
            <div class="action-buttons">
                <button class="btn-action btn-print" onclick="window.print()">
                    <i class="fas fa-print"></i>
                    Cetak QR Code
                </button>
                <button class="btn-action btn-back" onclick="window.history.back()">
                    <i class="fas fa-arrow-left"></i>
                    Kembali
                </button>
            </div>
            
            <div class="instructions">
